{# templates/artist/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Исполнители{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center flex-wrap gap-3">
                <h1 class="display-5 fw-bold mb-0">Исполнители</h1>
                <a href="{{ path('app_artist_new') }}" class="btn btn-primary">
                    Добавить исполнителя
                </a>
            </div>
        </div>

        {# Фильтры и поиск #}
        <form method="get" action="{{ path('app_artist_index') }}"
              class="d-flex flex-wrap align-items-center gap-3 mb-4">

            <!-- Поиск -->
            <div class="input-group" style="max-width: 320px;">
                <input type="text"
                       name="search"
                       class="form-control"
                       placeholder="Поиск по имени..."
                       value="{{ currentSearch }}">
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <!-- Сброс -->
            {% if currentSearch %}
                <a href="{{ path('app_artist_index') }}" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Сбросить
                </a>
            {% endif %}
        </form>

        <div class="row g-3">
            {% for artist in pagination %}
                <div class="col-12">
                    <div class="card shadow-sm h-100 overflow-hidden">
                        <div class="row g-0 align-items-center">
                            <!-- Фото исполнителя -->
                            <div class="col-auto p-2" style="width: 100px;">
                                <div class="ratio ratio-1x1">
                                    <img src="{{ artist.photoUrl }}"
                                         alt="{{ artist.name }}"
                                         class="img-fluid object-fit-cover rounded-3 shadow-sm"
                                         onerror="this.src='{{ absolute_url(asset('static/images/no_image.webp')) }}'">
                                </div>
                            </div>

                            <!-- Текст -->
                            <div class="col">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="{{ path('app_artist_show', {'id': artist.id}) }}"
                                           class="stretched-link text-decoration-none text-dark">
                                            <h5 class="card-title mb-2 fw-bold">{{ artist.name }}</h5>
                                            <p class="card-text text-muted small mb-0">
                                                {{ artist.bio|u.truncate(160, '...') }}
                                            </p>
                                        </a>
                                    </div>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <div class="ms-3" style="z-index: 100">
                                        <a href="{{ path('app_artist_edit', {'id': artist.id}) }}"
                                           class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Изменить
                                        </a>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center">
                        <h4 class="alert-heading">Исполнители не найдены</h4>
                        <p class="mb-0">Попробуйте изменить параметры поиска.</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-4">
            {{ include('common/_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}
