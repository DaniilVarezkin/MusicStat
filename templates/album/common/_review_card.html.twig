<div class="review-item card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="d-flex flex-column">
                <div class="d-flex align-items-center gap-2 mb-1">
                    <strong class="text-primary">{{ review.author.email }}</strong>
                </div>
                <small class="text-muted">
                    {{ review.createdAt|date('d.m.Y H:i') }}
                </small>
            </div>

            <div class="d-flex align-items-center gap-2">
                <span
                    class="badge bg-primary bg-opacity-15 border border-warning border-opacity-25 rounded-pill px-3 py-2">
                    <i class="bi bi-star-fill me-1"></i>{{ review.score }}
                </span>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('review_delete', {'review': review.id}) }}"
                       class="badge bg-danger bg-opacity-15 border border-warning border-opacity-25 rounded-pill px-3 py-2"
                       title="Удалить отзыв"
                       onclick="return confirm('Вы уверены, что хотите удалить этот отзыв?')">
                        <i class="bi bi-trash"></i>
                    </a>
                {% endif %}
            </div>
        </div>

        <div class="border-top pt-3 mt-2">
            <p class="mb-0 text-dark lh-sm">{{ review.text }}</p>
        </div>
    </div>
</div>
