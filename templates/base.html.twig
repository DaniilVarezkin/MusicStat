<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Добро пожаловать на сайт Music Stat!{% endblock %}</title>
    <link rel="icon" href="{{ asset('favicon.png') }}" sizes="any">
    {% block stylesheets %}
        <!-- Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/lumen/bootstrap.min.css" rel="stylesheet">        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.6.0/css/fontawesome.min.css" integrity="sha384-NvKbDTEnL+A8F/AA5Tc5kmMLSJHUO868P+lDtTpJIeQdGYaUIuLr4lVGOEA1OcMy" crossorigin="anonymous">

        <!-- Select 2 -->
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
        <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
        <link href="{{ asset('styles/app.css') }}"
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

<!-- Навигация -->
{% block navigation %}
    {% include 'common/header.html.twig' %}
{% endblock %}

<!-- Контент -->
<main class="flex-fill">
    <div class="container py-3">
        {% block body %}{% endblock %}
    </div>
</main>

<!-- Футер -->
{% block footer %}
    <footer class="mt-auto py-3 bg-light">
        <div class="container text-center">
            <small>© {{ "now"|date("Y") }} Все права защищены</small>
        </div>
    </footer>
{% endblock %}

{# Контейнер для тостов #}
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    {% set flashes = app.flashes %}
    {% for type, messages in flashes %}
        {% for message in messages %}
            {% set toast_class = type == 'error' ? 'danger' : type %}
            <div class="toast align-items-center text-bg-{{ toast_class }} border-0"
                 role="alert" aria-live="assertive" aria-atomic="true"
                 data-bs-delay="5000">
                <div class="d-flex">
                    <div class="toast-body">
                        {{ message }}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block javascripts %}
    <!-- Bootstrap JS -->
    <!-- jQuery (обязательно для Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toastElList = document.querySelectorAll('.toast');
            toastElList.forEach(toastEl => {
                const toast = new bootstrap.Toast(toastEl, {delay: 5000});
                toast.show();

                // Удаляем тост из DOM после закрытия
                toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
            });
        });
    </script>
{% endblock %}
</body>
</html>
